@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4"> This is the list of Products</h1>

    <div>
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Product ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>            
            @foreach (var item in Model.products)
            {
                <tr>
                    <td>@item.ProductID</td>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                </tr>
            }            
        </tbody>
    </table>
</div>
</div>
